<% var testimonials = [
    {
        quote: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veritatis laudantium laborum nihil cupiditate, in architecto",
        src: "images/avatar.min.jpg",
        name: "Adam Johnson",
        carrer: "Business",
        age: "23",
        active: true
    },
    {
        quote: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Veritatis laudantium laborum nihil cupiditate, in architecto",
        src: "images/avatar.min.jpg",
        name: "Nick",
        carrer: "Business",
        age: "52",
        active: false
    }
] %>


<section id="ss-testimonial" class="ss-testimonial ss-padding">
	<div class="container">
		<div class="row">
			<div class="col-lg-7">
				<div class="embed-responsive embed-responsive-16by9">
				    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/zpOULjyy-n8?rel=0"></iframe>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="testimonial-block">
                    <h2 class="ss-title title-dark">
                        <small>Học viên<br></small>
                        Của chúng tôi nói gì?
                    </h2>

                    <section class="carousel slide carousel-fade" data-ride="carousel" id="carousel-testimonial">
                        <div class="carousel-inner">
                            <% testimonials.forEach(function(testimonial) { %>
                                <div class="carousel-item <% if (testimonial.active) { %>active<% } %>">
                                    <div class="carousel-item-i">
                                        <div class="testimonial-blockquote">
                                            <p class="mb-0"><%= testimonial.quote %></p>
                                        </div>
                                        <div class="testimonial-user">
                                            <div class="media">
                                                <img src="<%= testimonial.src %>" alt="avatar" class="d-flex mr-3">
                                                <div class="media-body align-self-center">
                                                    <h5 class="mt-0"><%= testimonial.name %></h5>
                                                    <p><%= testimonial.carrer %> - <%= testimonial.age %> years old</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <div class="carousel-controls">
                            <a class="carousel-control-prev" href="#carousel-testimonial" role="button" data-slide="prev">
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-testimonial" role="button" data-slide="next">
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </section>       
                </div>
			</div>
		</div>
	</div>
</section>