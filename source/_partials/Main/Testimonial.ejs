<% var testimonials = [
    {
        quote: "Thật sự ấn tượng với không gian của TeeKiu Sport & Fitness, cứ ngỡ như mình đang tập luyện tại không gian của phòng tập tại nước ngoài, từ dịch vụ cho đến các bài tập được các huấn luyện viên và đội ngũ lễ tân tận tình hướng dẫn. Đến với TeeKiu tập luyện đã trở thành thói quen của tôi khi nào mà không hay.",
        src: "images/avatar-1.min.jpg",
        name: "Chị Vũ Thị Thanh Hằng",
        carrer: "Phó Phòng QLCNTT - Vietinbank",
        active: true
    },
    {
        quote: "Trước khi tập ở TeeKiu mình cũng đã trải nghiệm rất nhiều phòng tập, nhưng khi biết đến TeeKiu và đến tập thử, điều đầu tiên làm mình bất ngờ là không gian rất chuyên nghiệp và rộng rãi của TeeKiu. Với sự tận tình hướng dẫn của các bạn PT về chế độ dinh dưỡng và bài tập đối với tạng người của mình, không còn đắn đo gì mình quyết định tập tại TeeKiu tuy mình đang sinh sống và làm việc tại khu vực Đống Đa,",
        src: "images/avatar-2.min.jpg",
        name: "Anh Bùi Hải Phong",
        carrer: "Operation Manager tại Topica Native Thailand",
        active: false
    }
] %>


<section id="ss-testimonial" class="ss-testimonial ss-padding">
	<div class="container">
		<div class="row">
			<div class="col-lg-7">
				<div class="embed-responsive embed-responsive-4by3">
				    <iframe class="embed-responsive-item" src="//www.youtube.com/embed/m0QSitlD8vU?rel=0"></iframe>
				</div>
			</div>
			<div class="col-lg-5">
				<div class="testimonial-block">
                    <h2 class="ss-title title-dark">
                        <small>Học viên<br></small>
                        Của chúng tôi nói gì?
                    </h2>

                    <section class="carousel slide carousel-fade" data-ride="carousel" id="carousel-testimonial">
                        <div class="carousel-inner">
                            <% testimonials.forEach(function(testimonial) { %>
                                <div class="carousel-item <% if (testimonial.active) { %>active<% } %>">
                                    <div class="carousel-item-i">
                                        <div class="testimonial-blockquote">
                                            <p class="mb-0"><%= testimonial.quote %></p>
                                        </div>
                                        <div class="testimonial-user">
                                            <div class="media">
                                                <img src="<%= testimonial.src %>" alt="avatar" class="d-flex mr-3">
                                                <div class="media-body align-self-center">
                                                    <h5 class="mt-0"><%= testimonial.name %></h5>
                                                    <p><%= testimonial.carrer %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <div class="carousel-controls">
                            <a class="carousel-control-prev" href="#carousel-testimonial" role="button" data-slide="prev">
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-testimonial" role="button" data-slide="next">
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </section>       
                </div>
			</div>
		</div>
	</div>
</section>